package org.howard.edu.lsp.assignment2;
import java.util.Scanner;

public class SimpleTextProcessor{
public static int sum = 0, product = 1;

public static void processInput() {
Scanner scan = new Scanner(System.in);
System.out.println("String?");
String value = scan.nextLine();
while(!(value.equals("Goodbye"))) {
scanString(value);
}

System.out.println("Tokens: " + value);
System.out.println("Sum: " + sum);
System.out.println("Product: " + product);
}

public static void scanString(String value) {
int number = 0;
int index = 0; 
int begin = 0;
while(true) {
index = value.indexOf(' ');
if(index == -1)
break;
else {
number = Integer.parseInt(value.substring(begin, index));
sum += number;
product *= number;
value = value.substring(index + 1, value.length());
}

}
number = Integer.parseInt(value);
sum += number;
product *= number;
}

public static void main(String args[]) {
processInput();
}

}